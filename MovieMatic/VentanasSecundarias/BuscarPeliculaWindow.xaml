                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFCA2B00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="457*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.24"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="BuscarPorNombreButton" Content=" Nombre" HorizontalAlignment="Left" Margin="16,54,0,0" VerticalAlignment="Top" Width="127" Height="45" Click="BuscarPorNombreButton_Click" FontFamily="Engravers MT" FontSize="16" Foreground="#FFD74B25">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.228"/>
                    <GradientStop Color="#FF462617" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="nombrePeliABuscarTextBox" HorizontalAlignment="Left" Height="27" Margin="173,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Background="#FF050101" Foreground="#FFFAEFEF"/>
