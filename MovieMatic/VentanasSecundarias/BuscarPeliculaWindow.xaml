                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF552413" Offset="0.981"/>
                    <GradientStop Color="Black" Offset="0.297"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="anioPeliABuscarComboBox" HorizontalAlignment="Left" Margin="173,224,0,0" VerticalAlignment="Top" Width="120" Height="35">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FF0C0707" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Button x:Name="BuscarPeliPorGeneroButton" Content="Genero" HorizontalAlignment="Left" Margin="16,292,0,0" VerticalAlignment="Top" Width="127" Height="47" Click="BuscarPeliPorGeneroButton_Click" FontFamily="Engravers MT" FontSize="16" Foreground="#FFD74B25">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4C200E" Offset="1"/>
                    <GradientStop Color="Black" Offset="0.294"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="generoPeliABuscarTextBox" HorizontalAlignment="Left" Height="33" Margin="362,305,0,0" TextWrapping="Wrap" Text="Otro..." VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Background="#FF090404" Foreground="#FFF2EDED"/>
