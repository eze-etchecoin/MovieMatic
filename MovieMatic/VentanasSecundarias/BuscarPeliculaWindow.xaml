        <Label x:Name="InstruccionLabel" Content="Seleccione un método de búsqueda:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="42" Width="415" FontSize="24" FontFamily="Rockwell" Foreground="Black">
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.077"/>
                    <GradientStop Color="#FFCA2B00" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.096"/>
                    <GradientStop Color="#FF83280A" Offset="0.511"/>
                </LinearGradientBrush>
            </Label.Background>
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.144"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="buscarPorActorButton" Content="Actores" HorizontalAlignment="Left" Margin="16,363,0,0" VerticalAlignment="Top" Width="127" Height="46" FontFamily="Engravers MT" FontSize="16" Foreground="#FFD74B25">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.305"/>
                    <GradientStop Color="#FF561D0E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="actoresPeliABuscaromboBox" HorizontalAlignment="Left" Margin="173,373,0,0" VerticalAlignment="Top" Width="123" Height="35"/>
        <TextBox x:Name="ActoresPeliABuscarTextBox" HorizontalAlignment="Left" Height="32" Margin="362,377,0,0" TextWrapping="Wrap" Text="Otro..." VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Background="#FF110E0E" Foreground="#FFF6F6F6"/>

    </Grid>
</Window>
