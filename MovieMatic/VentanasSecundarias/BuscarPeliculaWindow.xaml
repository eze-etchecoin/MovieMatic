                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.302"/>
                    <GradientStop Color="#FF4F2615" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="directorPeliABuscarTextBox" HorizontalAlignment="Left" Height="27" Margin="173,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" RenderTransformOrigin="1.177,0.381" Background="#FF0A0101" Foreground="#FFFBFBFB"/>
        <Button x:Name="BuscarPeliPorAnioButton" Content="Estreno" HorizontalAlignment="Left" Height="46" Margin="16,214,0,0" VerticalAlignment="Top" Width="127" Click="BuscarPeliPorAnioButton_Click" FontFamily="Engravers MT" FontSize="16" Foreground="#FFD74B25">
