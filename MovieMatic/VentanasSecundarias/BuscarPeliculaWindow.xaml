        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieMatic.VentanasSecundarias"
        mc:Ignorable="d" Height="479.663" Width="696.354" Background="#FFD63400">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,0,-30.667" Height="456" VerticalAlignment="Top">
