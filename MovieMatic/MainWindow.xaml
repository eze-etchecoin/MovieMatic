<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieMatic"
        xmlns:Entidades="clr-namespace:Entidades;assembly=Entidades" x:Class="MovieMatic.MainWindow"
        mc:Ignorable="d"
        Title="MovieMatic" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="peliculaViewSource" d:DesignSource="{d:DesignInstance {x:Type Entidades:Pelicula}, CreateList=True}"/>
    </Window.Resources>
    <Grid RenderTransformOrigin="0.505,0.492" DataContext="{StaticResource peliculaViewSource}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="264*"/>
            <ColumnDefinition Width="252*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Ver Biblioteca" Grid.Column="1" HorizontalAlignment="Left" Margin="35,142,0,0" VerticalAlignment="Top" Width="104" Click="button_Click" Height="38"/>
        <Button x:Name="button1" Content="Buscar Pelicula" Grid.Column="1" HorizontalAlignment="Left" Margin="35,194,0,0" VerticalAlignment="Top" Width="104" Height="39"/>
        <Button x:Name="button2" Content="Agregar Pelicula " Grid.Column="1" HorizontalAlignment="Left" Margin="35,249,0,0" VerticalAlignment="Top" Width="104" Height="40"/>
        <Button x:Name="button3" Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Grid.Column="2" Margin="125,249,0,0" Height="40"/>

    </Grid>
</Window>
